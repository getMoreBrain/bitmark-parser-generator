{
  "name": "@bitmark-standard/bitmark-generator",
  "version": "0.0.1",
  "description": "A bitmark generator",
  "author": "Richard Sewell",
  "license": "ISC",
  "homepage": "https://github.com/bitmark-standard/bitmark-grammar#readme",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "vite-node ./test/bmgDev.ts",
    "build": "run build-cjs && run build-esm && webpack && run build-doc",
    "build-cjs": "tsc",
    "build-esm": "tsc --module ES6 --outDir 'dist/esm'",
    "build-umd": "tsc && webpack",
    "build-doc": "typedoc",
    "test": "jest --runInBand --coverage",
    "test-books": "jest --config=jest.books.config.js --runInBand --coverage",
    "split-expected-json": "tsx ./scripts/split-expected-json.ts",
    "publish": "yarn npm publish",
    "prepublish": "run lint && run clean && run build && run test",
    "clean": "shx rm -rf ./dist",
    "lint": "eslint --max-warnings 0 -- './**/*.@(tsx|ts|jsx|js|mjs|cjs)'",
    "ncu": "yarn dlx npm-check-updates -i",
    "tsc": "tsc",
    "jest": "jest"
  },
  "packageManager": "yarn@3.2.4",
  "engines": {
    "node": ">=10",
    "npm": ">=6.8.0",
    "git": ">=2.11.0",
    "yarn": ">=3"
  },
  "keywords": [
    "bitmark"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitmark-standard/bmg.git"
  },
  "browserslist": {
    "modern": [
      "last 5 chrome versions",
      "last 5 firefox versions"
    ]
  },
  "resolutions": {
    "antlr4ts": "0.5.0-alpha.4"
  },
  "devDependencies": {
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.7",
    "@types/fs-extra": "^11.0.1",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-arca": "^0.16.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.2.2",
    "jest-environment-node": "^29.2.2",
    "jest-html-reporter": "^3.7.0",
    "jest-junit": "^14.0.1",
    "node-polyfill-webpack-plugin": "^2.0.1",
    "prettier": "^2.7.1",
    "shx": "^0.3.4",
    "terser-webpack-plugin": "^5.3.7",
    "ts-jest": "^29.0.3",
    "typedoc": "^0.23.19",
    "typedoc-plugin-markdown": "^3.13.6",
    "typescript": "^4.8.4",
    "vite-node": "^0.29.8",
    "vite-tsconfig-paths": "^4.0.7",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@ncoderz/superenum": "^0.2.0",
    "bitmark-grammar": "^1.0.35",
    "fs-extra": "^11.1.0"
  }
}
