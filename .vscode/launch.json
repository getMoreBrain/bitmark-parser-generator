  "version": "1.0.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "BMG Dev JSON",
      "program": "${workspaceFolder}/test/custom/dev/bmgDevJson.ts",
      "runtimeArgs": [
        "-r",
        "esbuild-register"
      ],
      "console": "integratedTerminal",
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
    },
    {
      "type": "node",
      "request": "launch",
      "name": "BMG Dev Bitmark",
      "program": "${workspaceFolder}/test/custom/dev/bmgDevBitmark.ts",
      "runtimeArgs": [
        "-r",
        "esbuild-register"
      ],
      "console": "integratedTerminal",
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest: ALL Tests",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": ["-i"],
      // "preLaunchTask": "build",
      "console": "integratedTerminal",
      // "disableOptimisticBPs": true,
      // "internalConsoleOptions": "openOnSessionStart",
      // "outFiles": ["${workspaceRoot}/dist/**/*"],
      // "envFile": "${workspaceRoot}/.env",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest: Current file",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": ["${fileBasenameNoExtension}"],
      // "preLaunchTask": "build",
      "console": "integratedTerminal",
      // "disableOptimisticBPs": true,
      // "internalConsoleOptions": "openOnSessionStart",
      // "outFiles": ["${workspaceRoot}/dist/**/*"],
      // "envFile": "${workspaceRoot}/.env",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest: Book Tests",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": ["--config=jest.books.config.js", "-i"],
      // "preLaunchTask": "build",
      "console": "integratedTerminal",
      // "disableOptimisticBPs": true,
      // "internalConsoleOptions": "openOnSessionStart",
      // "outFiles": ["${workspaceRoot}/dist/**/*"],
      // "envFile": "${workspaceRoot}/.env",
    },
  ]
}
