{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "1.0.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "BMG Dev",
      "program": "${workspaceFolder}/src/bmgDev.ts",
      "runtimeArgs": [
        "--loader",
        "tsx"
      ],
      "console": "integratedTerminal",
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Yellicode",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/node_modules/@yellicode/cli/dist/es6/index.js",
      "args": ["--debug-template"],
      // "console": "integratedTerminal",
      "attachSimplePort": 9230,
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest: ALL  Tests",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": ["-i"],
      // "preLaunchTask": "build",
      "console": "integratedTerminal",
      // "disableOptimisticBPs": true,
      // "internalConsoleOptions": "openOnSessionStart",
      // "outFiles": ["${workspaceRoot}/dist/**/*"],
      // "envFile": "${workspaceRoot}/.env",
      "windows": {
        "program": "${workspaceFolder}/node_modules/jest/bin/jest"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest: Current file",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": ["${fileBasenameNoExtension}"],
      // "preLaunchTask": "build",
      "console": "integratedTerminal",
      // "disableOptimisticBPs": true,
      // "internalConsoleOptions": "openOnSessionStart",
      // "outFiles": ["${workspaceRoot}/dist/**/*"],
      // "envFile": "${workspaceRoot}/.env",
      "windows": {
        "program": "${workspaceFolder}/node_modules/jest/bin/jest"
      }
    }
  ]
}
